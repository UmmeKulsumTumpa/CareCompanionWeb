APP_NAME=Caregiver Chatbot ML Backend
APP_VERSION=1.0.0
DEBUG=false

HF_MODEL_NAME=IAmPilgrim/caregiver-chatbot-qwen25-3b
HF_TOKEN=your_huggingface_token_here

EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=caregiver_knowledge

RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.75
RELATED_EXPERIENCE_THRESHOLD=0.80

CHAT_HISTORY_LIMIT=10

MAX_NEW_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9

# Internal pipeline credential tokens (required for context acceleration layer)
CTX_PIPELINE_TOKEN=your_ctx_pipeline_token_here
INFERENCE_CACHE_TOKEN=your_inference_cache_token_here

# System prompt selection â€” filename stem inside app/prompts/ (no .txt extension)
# Available: v1_default | v2_structured | v3_concise
# Add new prompts by dropping a .txt file in app/prompts/ and updating this value
ACTIVE_SYSTEM_PROMPT=v1_default
